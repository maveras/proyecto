<h1>Crea una nueva actividad</h1>

<%= form_for @request, class: "form-horizontal", url: {action: "create"} do |f| %>
<div class="form-group">	
  <%=f.label :interest_id, "Interest", class: "col-md-4 control-label" %>
  <%= f.select :interest_id, options_from_collection_for_select(@interest_by_importance, "id", "name"), class: "form-control" %>
 </div>
 <div class="form-group">
	 <%= f.label :title , class: "col-sm-2 control-label" %>
	 <div class="col-sm-10">
	  <%= f.text_field :title , class:"form-control"%>
	  </div>
  </div>
  <div class="form-group">
	  <%= f.label :description , class: "col-sm-2 control-label" %>
	  <div class="col-sm-10">
	  <%= f.text_area :description, size: "3x3",class:"form-control " %>
	  </div>
  </div>
  <div class="form-group">
  	<div class="col-sm-2">
	  <%= f.label :date_activity %>	  
	 </div>
	  <div class="col-sm-10">
	  	<%= f.date_field(:date_activity) %>
	  	<%= f.time_select(:time_begin) %>
	  </div>
  </div>
  <div class="form-group">
  	  <div class="col-sm-2">	
	  <%= f.label :date_activity_end %>
	  </div>
	  <div class="col-sm-10">
	  	<%= f.date_field(:date_activity_end) %>
	  	<%= f.time_select(:time_end) %>
	  </div>
  </div>    
  <div class="col-sm-10 col-sm-offset-2">
  <%= f.submit "Crear actividad" , class: "btn btn-default btn-primary"%>
  </div>
<% end %>
